<section class="user-form-container new">
  <%# <div class="left-box">
    <%= image_tag('bg2.jpeg') %>
  <%# </div> %>

  <div class="right-box">
    <div>
      <%= link_to root_path, class: 'app-name' do %>
        <div class='content'>
          <h2>SIGN UP</h2>
          <h2>SIGN UP</h2>
        </div>
      <% end %>
      <h4 class='account-regis-header'>
        <%= t('users.account.sign_up_to_see_photos_and_videos') %>
      </h4>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%# <%= f.input :avatar, required: false, class: 'form-control' %>
           <%# <%= f.input :user_name,
                      required: true,
                      placeholder: "Your name",
                      label: false %>

          <%= f.input :email,
                      required: true,
                      autofocus: false,
                      placeholder: "Email",
                      label: false %>
          <%= f.input :user_name,
                      required: true,
                      placeholder: t('devise.registrations.user_name'),
                      label: false %>
          <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      placeholder: t('devise.registrations.password'),
                      label: false %>
          <%# <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      placeholder: "Password confirmation",
                      label: false %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('devise.registrations.sign_up'), class: "btn btn-primary twink-btn twink-btn-submit user-form-submit-btn w-full py-2 px-4 rounded-lg shadow hover:bg-blue-600 transition duration-200" %>
        </div>
      <% end %>
    </div>
    <div>
      <%= render "devise/shared/links" %>
    </div>
  </div>

</section>
