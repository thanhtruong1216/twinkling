<section class="user-form-container">
  <div class="left-box">
    <%= image_tag('bg.jpeg') %>
    
  </div>

  <div class="right-box log-in-form">
    <h1>
      <%= t('users.account.login') %>
    </h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: "Email",
                    label: false %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    placeholder: "Password",
                    label: false %>
        <%= f.input :remember_me, as: :boolean, label: t('users.account.remember_me') if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('users.account.login'), class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</section>

