<section class="user-form-container">
  <div class="left-box">
    <div class="under-box phone-box">
      <%= image_tag "iphone-frame.png" %>
      <%= image_tag "slide-image_9.jpeg" %>
    </div>
    <div class="above-box phone-box">
      <%= image_tag "apple-iphone7-silver-portrait.png" %>
      <div id="log-in-slideshow">
        <div>
          <%= image_tag "slide-log-in_1.jpeg" %>
        </div>
        <div>
          <%= image_tag "slide-log-in_2.jpeg" %>
        </div>
        <div>
          <%= image_tag "slide-log-in_3.jpeg" %>
        </div>
        <div>
          <%= image_tag "slide-log-in_4.jpeg" %>
        </div>
        <div>
          <%= image_tag "slide-log-in_5.jpeg" %>
        </div>
        <div>
          <%= image_tag "slide-image_10.jpeg" %>
        </div>
        <div>
          <%= image_tag "slide-under-image" %>
        </div>
        <div>
          <%= image_tag "slide-image_15.jpeg" %>
        </div>
      </div>
    </div>
  </div>

  <div class="right-box log-in-form">
    <h1>
      <%= t('users.account.login') %>
    </h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: "Email",
                    label: false %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    placeholder: "Password",
                    label: false %>
        <%= f.input :remember_me, as: :boolean, label: t('users.account.remember_me') if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('users.account.login'), class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</section>

<script>
  $("#log-in-slideshow > div:gt(0)").hide();

  setInterval(function() {
    $('#log-in-slideshow > div:first')
      .fadeOut(1500)
      .next()
      .fadeIn(1500)
      .end()
      .appendTo('#log-in-slideshow');
  },  4000);
</script>
