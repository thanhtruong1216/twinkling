- total_votes = poll.options.sum(&:votes_count).nonzero? || 1
h5.mb-2
  = t("show.stats")
ul.text-muted.small.mb-2
  - poll.options.each do |option|
    - vote_count = option.votes_count
    - vote_percent = ((vote_count.to_f / total_votes) * 100).round
    li style="font-size: 15px !important;"
      = "#{option.text} Â· #{vote_count} vote (#{vote_percent}%)"
