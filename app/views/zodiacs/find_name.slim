article.zodiac-name
  h1
    = t("header.find_zodiac")

  = simple_form_for :find_name, url: find_name_zodiacs_url, method: "GET" do |f|
    .zodiac-input-wrapper
      label= t('zodiacs.date_month')
      = f.input :birthday, label: false, placeholder: t('zodiacs.enter_date_and_month'), class: 'form-control zodiac-birthday'

    = render 'shared/zodiac_errors'
    = f.button :submit, t('zodiacs.find'), class: 'twink-btn-submit twink-normal-btn zmt-2'

  - if @result
    p= "#{@result[:birthday]}: #{@result[:zodiac_name]}"
